{
  "plugins": ["prettier"],
  "extends": ["airbnb-base", "prettier", "react-app"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "prettier/prettier": ["error", { "printWidth": 110, "singleQuote": true }],
    "react/prop-types": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "guard-for-in": "warn"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    },
    "react": {
      "version": "detect"
    }
  }
}
